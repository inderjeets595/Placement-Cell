    rel="shortcut icon"
    href="https://cdn-icons-png.flaticon.com/512/1063/1063196.png"
    type="image/x-icon"
  />
  
  <!-- Custom stylesheets for navigation and main layout -->
  <link rel="stylesheet" href="../assets/css/_navbar.css" />
  <link rel="stylesheet" href="../assets/css/main.css" />
